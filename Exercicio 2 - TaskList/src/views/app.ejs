  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('partials/header') %>
    <div class="container mt-5">
      <h1>Listas de Tarefas</h1>
      <ul class="list-group">
        <% taskLists.forEach(taskList=> { %>
          <li class="list-group-item d-flex align-items-center justify-content-between">
            <a href="/app/<%= taskList.id %>" class="text-body-emphasis fs-5 text-decoration-none">
              <%= taskList.titleList %>
            </a>

            <form action="/app/<%= taskList.id %>/excluir" method="post">
              <button type="submit" class="btn btn-sm btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/></svg></button>
            </form>
          </li>
          <% }); %>
      </ul>
      <a href="/app/nova-lista" class="btn btn-primary mt-3">Nova Lista de Tarefas</a>
    </div>
  
    <%- include('partials/footer') %>
  </div>
</body>

</html>